<header class="row">
    <div class="col-md-12 col-centered rest-header">
        <h1>Is a Burger a Sandwich?</h1>
    </div>
</header>

<div class="row justify-content">
    <div class="col-md-4 burger-list" data-devoured="false">
        {{#each burgers}}
            {{#unless devoured}}
            <div>{{this.burger_name}} <button class="eat-burger" data-id="{{this.id}}">Devour!</button></div>
            {{/unless}}
        {{/each}}
    </div> 
    <div class="col-md-4 burger-list" data-devoured="true">
        {{#each burgers}}
            {{#if devoured}}
            <div>{{this.burger_name}}</div>
            {{/if}}
        {{/each}}
    </div>
</div>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger-text" name="name">
    </div>

    <button type="submit">Submit</button>
</form>